<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/whole_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ShowTime" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moudel_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/whole_sample"
        android:orientation="vertical" >

        <Button
            android:id="@+id/show_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showTextViewSample"
            android:text="showTextViewSample" />

        <Button
            android:id="@+id/show_dial_records_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showDialRecordsViewSample"
            android:text="showDialRecordsViewSample" />

        <Button
            android:id="@+id/show_touch_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showCustomRelativeLayoutSample"
            android:text="showCustomRelativeLayoutSample" />

        <Button
            android:id="@+id/show_yeay_cirlce_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showYearCirlceWidgetSample"
            android:text="showYearCirlceWidgetSample" />
    </LinearLayout>

</RelativeLayout>